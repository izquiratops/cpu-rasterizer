{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clear build folder",
            "command": "rm -rf build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "statusbar": {
                    "hide": true
                }
            },
        },
        {
            "label": "Prepare CMake (Windows)",
            "command": "cmake",
            "type": "shell",
            "args": [
                "-B=build",
                "-G='MinGW Makefiles'",
                "-DCMAKE_PREFIX_PATH=C:\\Msys64\\usr\\bin",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
                "-DCMAKE_BUILD_TYPE=Release",
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}",
                "statusbar": {
                    "hide": true
                }
            },
        },
        {
            "label": "Run CMake build",
            "type": "shell",
            "command": "cmake --build .",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/build",
                "statusbar": {
                    "hide": true
                }
            },
        },
        {
            "label": "Run build executable (Windows)",
            "type": "shell",
            "command": "./${workspaceFolderBasename}.exe",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}/build",
                "statusbar": {
                    "hide": true
                }
            },
        },
        {
            "label": "Prepare project",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clear build folder",
                "Prepare CMake (Windows)",
            ],
            "options": {
                "statusbar": {
                    "label": "Prepare project üê£"
                }
            }
        },
        {
            "label": "Run project",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Run CMake build",
                "Run build executable (Windows)"
            ],
            "options": {
                "statusbar": {
                    "label": "Run project üèÉ‚Äç‚ôÇÔ∏è‚Äç‚û°Ô∏è"
                }
            }
        }
    ]
}