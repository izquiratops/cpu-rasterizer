{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clear build folder",
            "command": "rm -rf build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "label": "Prepare project",
            "command": "cmake",
            "type": "shell",
            "args": [
                "-B=build",
                "-G='MinGW Makefiles'",
                "-DCMAKE_BUILD_TYPE=Release",
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "label": "Build project",
            "type": "shell",
            "command": "cmake --build .",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
        },
        {
            "label": "Build from scratch",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clear build folder",
                "Prepare project",
                "Build it!"
            ]
        }
    ]
}