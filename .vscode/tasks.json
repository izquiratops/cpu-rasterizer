{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B=build",
                "-DCMAKE_C_COMPILER=gcc",
                "-DCMAKE_CXX_COMPILER=g++"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "label": "Run Make",
            "type": "shell",
            "command": "make",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
        },
        {
            "label": "Build project",
            "dependsOrder": "sequence",
            "dependsOn": ["Run CMake", "Run Make"]
        }
    ]
}